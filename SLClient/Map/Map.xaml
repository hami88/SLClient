<Window x:Class="SLClient.Map.Map"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Map"
        Height="620" Width="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="620" MinHeight="620">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Oberer Bereich enthält Buttons + Karte, logisch getrennt -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Oberer Buttonbereich -->
            <StackPanel Orientation="Vertical"
                        Grid.Row="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Panel.ZIndex="10"
                        Width="600">

                <!-- Erste Zeile: Buttons + ComboBox -->
                <StackPanel Orientation="Horizontal">
                    <Button Width="30" Height="30"
                            Click="NewMapButton_Click"
                            ToolTip="Neue Karte"
                            Margin="0,0,10,0">
                        <fa:PackIconFontAwesome Kind="FileSolid"
                                                Width="16" Height="16"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="Black"/>
                    </Button>
                    <Button Width="30" Height="30"
                            Click="SaveMapButton_Click"
                            ToolTip="Speichern"
                            Margin="0,0,10,0">
                        <fa:PackIconFontAwesome Kind="FloppyDiskSolid"
                                                Width="16" Height="16"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="Black"/>
                    </Button>
                    <Button Width="30" Height="30"
                            Click="LoadMapButton_Click"
                            ToolTip="Laden"
                            Margin="0,0,10,0">
                        <fa:PackIconFontAwesome Kind="FolderOpenRegular"
                                                Width="16" Height="16"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Foreground="Black"/>
                    </Button>
                    <ComboBox x:Name="SavedMapsComboBox"
                              Width="150"
                              VerticalAlignment="Center"
                              SelectionChanged="SavedMapsComboBox_SelectionChanged"/>
                </StackPanel>

                <!-- Zweite Zeile: Oben-Pfeil mittig -->
                <Button Width="30" Height="30"
                        Click="MoveUp_Click"
                        ToolTip="Nach oben"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center">
                    <fa:PackIconFontAwesome Kind="ArrowUpSolid"
                                            Width="16" Height="16"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Foreground="Black"/>
                </Button>
            </StackPanel>

            <!-- Canvas mit Karte (jetzt unterhalb des Buttons) -->
            <Canvas x:Name="MapCanvas"
                    Background="White"
                    Grid.Row="1"/>
        </Grid>

        <!-- Bewegung: Links -->
        <Button Width="30" Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Click="MoveLeft_Click"
                ToolTip="Nach links"
                Margin="10"
                Panel.ZIndex="20">
            <fa:PackIconFontAwesome Kind="ArrowLeftSolid"
                                    Width="16" Height="16"
                                    Foreground="Black"/>
        </Button>

        <!-- Bewegung: Rechts -->
        <Button Width="30" Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Click="MoveRight_Click"
                ToolTip="Nach rechts"
                Margin="10"
                Panel.ZIndex="20">
            <fa:PackIconFontAwesome Kind="ArrowRightSolid"
                                    Width="16" Height="16"
                                    Foreground="Black"/>
        </Button>

        <!-- Bewegung: Unten -->
        <Button Width="30" Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="MoveDown_Click"
                ToolTip="Nach unten"
                Margin="10"
                Panel.ZIndex="20">
            <fa:PackIconFontAwesome Kind="ArrowDownSolid"
                                    Width="16" Height="16"
                                    Foreground="Black"/>
        </Button>

        <!-- Z-Achse Bewegung: + und - rechts oben -->
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="10"
                    Panel.ZIndex="20">
            <!-- Z+ -->
            <Button Width="30" Height="30"
                    Click="MoveZUp_Click"
                    ToolTip="Z erhöhen">
                <fa:PackIconFontAwesome Kind="PlusSolid"
                                        Width="16" Height="16"
                                        Foreground="Black"/>
            </Button>
            <!-- Z- -->
            <Button Width="30" Height="30"
                    Click="MoveZDown_Click"
                    ToolTip="Z verringern"
                    Margin="0,5,0,0">
                <fa:PackIconFontAwesome Kind="MinusSolid"
                                        Width="16" Height="16"
                                        Foreground="Black"/>
            </Button>
        </StackPanel>

        <!-- Legende und CheckBox unten -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Rectangle Width="16" Height="16" Fill="Red" Stroke="DarkRed" StrokeThickness="1" Margin="0,0,5,0"/>
                    <TextBlock VerticalAlignment="Center">Aktuelle Position</TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Rectangle Width="16" Height="16" Fill="LightGray" Stroke="Gray" StrokeThickness="1" Margin="0,0,5,0"/>
                    <TextBlock VerticalAlignment="Center">Raum</TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Line X1="0" Y1="0" X2="10" Y2="0" Stroke="Black" StrokeThickness="2" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock VerticalAlignment="Center">Weg</TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Canvas Width="16" Height="16" Margin="0,0,5,0">
                        <Polygon Points="0,0 16,0 0,16" Fill="LimeGreen"/>
                    </Canvas>
                    <TextBlock VerticalAlignment="Center">Oben</TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Canvas Width="16" Height="16" Margin="0,0,5,0">
                        <Polygon Points="16,16 0,16 16,0" Fill="DodgerBlue"/>
                    </Canvas>
                    <TextBlock VerticalAlignment="Center">Unten</TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <Canvas Width="16" Height="16" Margin="0,0,5,0">
                        <Polygon Points="0,0 16,0 0,16" Fill="Green"/>
                        <Polygon Points="16,16 0,16 16,0" Fill="DodgerBlue"/>
                    </Canvas>
                    <TextBlock VerticalAlignment="Center">Oben &amp; Unten</TextBlock>
                </StackPanel>

            </StackPanel>

            <CheckBox x:Name="ReadOnlyCheckBox"
                      Content="ReadOnly"
                      IsChecked="False"
                      Checked="ReadOnlyCheckBox_Checked"
                      Unchecked="ReadOnlyCheckBox_Unchecked"
                      VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
